{% trans_default_domain 'FOSUserBundle' %}
{% extends "@FOSUser/layout.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/fosuser.css') }}">
{% endblock %}


{% block fos_user_content %}

<div class="container">
    <div class="container-login">
        <h1 class="mt-3 mb-3">Créez votre compte</h1>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_widget(form) }}
        <div>
            <input type="submit" value="Valider" class="btn btn-primary btn-block btn-lg"/>
        </div>
        <a href="{{ path("homepage") }}" class="btn btn-secondary btn-block btn-lg mt-5">Revenir à l'accueil</a>
        {{ form_end(form) }}
    </div>
</div>


{% endblock fos_user_content %}
