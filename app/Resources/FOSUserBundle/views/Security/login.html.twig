{% trans_default_domain 'FOSUserBundle' %}
{% extends "@FOSUser/layout.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/fosuser.css') }}">
{% endblock %}


{% block fos_user_content %}
    <div class="container">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        <div class="container-login">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                <h1 class="mt-3 mb-3">Authentification</h1><br>
                <div class="form-group">
                    <label for="username">NOM D'UTILISATEUR</label>
                    <input placeholder="{{ 'security.login.username'|trans }}" class="form-control" type="text" id="username"
                           name="_username" value="{{ last_username }}"
                           required="required"/>
                </div>

                <div class="form-group">
                    <label for="password">MOT DE PASSE</label>
                    <input placeholder="{{ 'security.login.password'|trans }}" class="form-control" type="password"
                           id="password" name="_password" required="required"/>
                </div>

                <input type="submit" class="btn btn-primary btn-block btn-lg" id="_submit"
                       name="_submit"
                       value="Connexion"/>
                <h2 class="mt-5">Pas encore inscrit ?</h2>
                <a href="{{ path("fos_user_registration_register") }}" class="btn btn-primary btn-block btn-lg">Inscription</a>
                <a href="{{ path("homepage") }}" class="btn btn-secondary btn-block btn-lg">Revenir Ã  l'accueil</a>



            </form>
        </div>
    </div>
{% endblock fos_user_content %}