{% extends 'layout.html.twig' %}

{% block layout %}

    <div class="artwork-header">
        <div class="player-control">
            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100">
                <path d="M73.32661 46.37097L37.84274 24.79839c-3.18548-1.7742-7.19758.50403-7.19758 4.23387v41.93548c0 3.70968 3.99194 6.00807 7.19758 4.23387l35.48387-20.3629c3.30646-1.83468 3.30646-6.6129 0-8.46774zM100 50c0-27.62097-22.37903-50-50-50S0 22.37903 0 50s22.37903 50 50 50 50-22.37903 50-50zM9.67742 50C9.67742 27.72177 27.72177 9.67742 50 9.67742S90.32258 27.72177 90.32258 50 72.27823 90.32258 50 90.32258 9.67742 72.27823 9.67742 50z"></path>
            </svg>

        </div>
        <img src="{{ artwork.image }}" alt="{{ artwork.title }}" class="artwork-bg">
        <img src="{{ artwork.image }}" alt="{{ artwork.title }}" class="artwork-img">

    </div>
    <div class="container artwork-page">
        <div class="row container-description">
            <div class="main-description ml-4 mr-4">
                <h1 class="mt-3 mb-3">{{ artwork.title }}</h1>
                {% for artist in artwork.artists %}
                    <h2>{{ artist.name }}</h2>
                {% endfor %}
                <p>{{ artwork.fullDate }}</p>
                <p>{{ artwork.description }}</p>
            </div>
        </div>
    </div>
    {% include 'artwork/artworkGrid.html.twig' %}
{% endblock %}
