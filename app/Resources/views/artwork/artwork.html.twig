{% extends 'layout.html.twig' %}

{% block layout %}

    <div class="artwork-header">
        <div class="player-control">
            <div class="play ">
                <i class="fa fa-play-circle"></i>
            </div>
            <div class="pause ">
                <i class="fa fa-pause-circle"></i>
            </div>
        </div>
        <img src="{{ artwork.image }}" alt="{{ artwork.title }}" class="artwork-bg">
        <img src="{{ artwork.image }}" alt="{{ artwork.title }}" class="artwork-img">

    </div>
    <div class="container artwork-page">
        <div class="row container-description">
            <div class="main-description ml-4 mr-4">
                <h1 class="mt-3 mb-3">{{ artwork.title }}</h1>
                {% for artist in artwork.artists %}
                    <h2>{{ artist.name }}</h2>
                {% endfor %}
                <p>{{ artwork.fullDate }}</p>
                <p>{{ artwork.description }}</p>
            </div>
            <div>
              {% if favorite %}
                  {% set maclassecss = 'unfav' %}
              {% else %}
                  {% set maclassecss = 'fav' %}
              {% endif %}
              {{ form_start(form) }}
              {{ form_widget(form, {'attr':{'class':maclassecss }}) }}
              {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% include 'artwork/artworkGrid.html.twig' %}
{% endblock %}
