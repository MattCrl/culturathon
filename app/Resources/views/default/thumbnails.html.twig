{% for tag in tags %}

    {% if (tag.artworks|length) >= 3 %}

        <div class="col-12 col-md-6 col-lg-3 mb-5">
            <div class="row">
                <div class="col-8">
                    <div class="square">
                        <img src="{{ tag.artworks[0].image }}" alt="">
                    </div>
                </div>
                <div class="col-4 align-squares">
                    <div class="row">
                        <div class="col-12">
                            <div class="square">
                                <img src="{{ tag.artworks[1].image }}" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="square">
                                <img src="{{ tag.artworks[2].image }}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-left">

                    <h2 class="text-left mt-2">{{ tag.name }}</h2>
                    <a class="btn btn-primary" href="{{ path('tag', {id:tag.id}) }}">Plus de {{ tag.name }}
                        <i class="ml-2 fa fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

    {% endif %}

{% endfor %}